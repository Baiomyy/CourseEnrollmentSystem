@model EnrollmentCreateViewModel

@{
    ViewData["Title"] = "Create Enrollment";
}

<h1>Create Enrollment</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" id="enrollmentForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="StudentId" class="control-label"></label>
                <select asp-for="StudentId" id="StudentId" class="form-select">
                    <option value="">-- Select Student --</option>
                    @foreach (var student in Model.Students)
                    {
                        <option value="@student.Id">@student.FullName (@student.Email)</option>
                    }
                </select>
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="CourseId" class="control-label"></label>
                <select asp-for="CourseId" id="courseId" class="form-select">
                    <option value="">-- Select Course --</option>
                    @foreach (var course in Model.Courses)
                    {
                        <option value="@course.Id">@course.Title</option>
                    }
                </select>
                <span asp-validation-for="CourseId" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label class="control-label">Available Slots</label>
                <div id="availableSlots" class="form-control-plaintext fw-bold text-primary">
                    Select a course to see available slots
                </div>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Enroll" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Function to load available slots for a course
            function loadAvailableSlots(courseId) {
                var slotsDiv = $('#availableSlots');
                
                if (!courseId) {
                    slotsDiv.text('Select a course to see available slots');
                    slotsDiv.removeClass('text-danger text-success').addClass('text-primary');
                    return;
                }
                
                slotsDiv.text('Loading...');
                
                $.ajax({
                    url: '@Url.Action("GetAvailableSlots", "Enrollments")',
                    type: 'GET',
                    data: { courseId: courseId },
                    success: function(response) {
                        if (response.error) {
                            slotsDiv.text('Error: ' + response.error);
                            slotsDiv.removeClass('text-primary text-success').addClass('text-danger');
                        } else {
                            var slots = response.availableSlots;
                            slotsDiv.text('Available Slots: ' + slots);
                            if (slots > 0) {
                                slotsDiv.removeClass('text-primary text-danger').addClass('text-success');
                            } else {
                                slotsDiv.removeClass('text-primary text-success').addClass('text-danger');
                            }
                        }
                    },
                    error: function() {
                        slotsDiv.text('Error loading available slots');
                        slotsDiv.removeClass('text-primary text-success').addClass('text-danger');
                    }
                });
            }

            // Function to clear error messages
            function clearErrors() {
                // Clear validation summary (ModelOnly errors like "Student is already enrolled")
                // The asp-validation-summary renders as a div with class "text-danger" containing ul/li
                // Exclude #availableSlots from being cleared (it uses text-danger class for styling)
                $('#enrollmentForm').find('div.text-danger').not('#availableSlots').first().hide().empty();
                $('.validation-summary-errors').hide().empty();
                $('.validation-summary').hide().empty();
                
                // Clear field-level validation errors
                $('.field-validation-error').removeClass('field-validation-error').addClass('field-validation-valid');
                $('span[data-valmsg-for]').text('');
                $('span.text-danger').not('#availableSlots').text('');
            }

            // On page load, if a course is already selected (e.g., after form error), load its available slots
            var selectedCourseId = $('#courseId').val();
            if (selectedCourseId) {
                loadAvailableSlots(selectedCourseId);
            }

            // Clear errors when student selection changes
            $('#StudentId').change(function() {
                clearErrors();
            });

            // Clear errors and update available slots when course selection changes
            $('#courseId').change(function() {
                clearErrors();
                var courseId = $(this).val();
                loadAvailableSlots(courseId);
            });
        });
    </script>
}

